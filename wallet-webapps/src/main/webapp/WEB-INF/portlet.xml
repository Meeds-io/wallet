<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   <portlet>
     <portlet-name>WalletAPI</portlet-name>
     <display-name xml:lang="EN">Wallet API Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/walletAPI.html</value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Wallet API Application</title>
       <keywords>Wallet API Application</keywords>
     </portlet-info>
   </portlet>
   <portlet>
     <portlet-name>WalletLink</portlet-name>
     <display-name xml:lang="EN">Wallet Tip Tip Link Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/walletLink.html</value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Wallet Tip Tip Link Application</title>
       <keywords>Wallet Tip Tip Application</keywords>
     </portlet-info>
   </portlet>
   <portlet>
     <portlet-name>Wallet</portlet-name>
     <display-name xml:lang="EN">Wallet Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/wallet.html</value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Wallet Application</title>
       <keywords>Wallet Application</keywords>
     </portlet-info>
   </portlet>
   <portlet>
     <portlet-name>SpaceWallet</portlet-name>
     <display-name xml:lang="EN">Space Wallet Application</display-name>
     <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
     <init-param>
      <name>portlet-view-dispatched-file-path</name>
      <value>/spaceWallet.html</value>
     </init-param>
     <expiration-cache>-1</expiration-cache>
     <cache-scope>PUBLIC</cache-scope>
     <supports>
       <mime-type>text/html</mime-type>
     </supports>
     <supported-locale>en</supported-locale>
     <portlet-info>
       <title>Space Wallet Application</title>
       <keywords>Space Wallet Application</keywords>
     </portlet-info>
   </portlet>

    <portlet>
        <portlet-name>WalletBalance</portlet-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/walletBalance.html</value>
        </init-param>
        <init-param>
            <description>List of profiles that can be used to enable this portlet</description>
            <name>exo.profiles</name>
            <value>wallet</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>WalletBalance</title>
        </portlet-info>
    </portlet>
</portlet-app>