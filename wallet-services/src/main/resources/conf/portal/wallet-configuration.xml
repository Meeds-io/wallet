<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <type>org.exoplatform.wallet.dao.AddressLabelDAO</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.dao.WalletAccountDAO</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.dao.WalletTransactionDAO</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.dao.WalletPrivateKeyDAO</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.dao.WalletBlockchainStateDAO</type>
  </component>

  <component>
    <key>org.exoplatform.wallet.storage.WalletStorage</key>
    <type>org.exoplatform.wallet.storage.cached.CachedAccountStorage</type>
  </component>

  <component>
    <key>org.exoplatform.wallet.storage.TransactionStorage</key>
    <type>org.exoplatform.wallet.storage.cached.CachedTransactionStorage</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.storage.AddressLabelStorage</type>
  </component>

  <component>
    <key>org.exoplatform.wallet.service.WalletAccountService</key>
    <type>org.exoplatform.wallet.service.WalletAccountServiceImpl</type>
    <init-params>
      <value-param>
        <name>admin.wallet.key</name>
        <description>Admin wallet password encryption for first security level</description>
        <value>${exo.wallet.admin.key:changeThisKey}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <key>org.exoplatform.wallet.blockchain.service.EthereumClientConnector</key>
    <type>org.exoplatform.wallet.blockchain.service.EthereumClientConnector</type>
  </component>

  <component>
    <key>org.exoplatform.wallet.service.BlockchainTransactionService</key>
    <type>org.exoplatform.wallet.blockchain.service.EthereumBlockchainTransactionService</type>
  </component>

  <component>
    <key>org.exoplatform.wallet.service.WalletTokenAdminService</key>
    <type>org.exoplatform.wallet.blockchain.service.EthereumWalletTokenAdminService</type>
  </component>

  <component>
    <key>org.exoplatform.wallet.service.WalletTransactionService</key>
    <type>org.exoplatform.wallet.service.WalletTransactionServiceImpl</type>
    <init-params>
      <value-param>
        <name>transaction.pending.maxDays</name>
        <description>Maximum days to wait until transaction is added to blockchain, if exxceeding this duration, transaction will be marked as failed</description>
        <value>${exo.wallet.transaction.pending.maxDays:1}</value>
      </value-param>
      <value-param>
        <name>transaction.pending.maxToSend</name>
        <description>Maximum parallel pending transactions to send for a given wallet</description>
        <value>${exo.wallet.transaction.pending.maxToSend:5}</value>
      </value-param>
      <value-param>
        <name>transaction.pending.maxSendingAttempts</name>
        <description>Maximum attempts to send a transaction to blockchain</description>
        <value>${exo.wallet.transaction.pending.maxSendingAttempts:3}</value>
      </value-param>
      <value-param>
        <name>transaction.logAllContractTransactions</name>
        <description>Whether to log all transactions made on principal contract or not</description>
        <value>${exo.wallet.transaction.logAllContractTransactions:false}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <key>org.exoplatform.wallet.service.WalletContractService</key>
    <type>org.exoplatform.wallet.service.WalletContractServiceImpl</type>
    <init-params>
      <value-param>
        <name>contract.abi.path</name>
        <description>Token Contract ABI path</description>
        <value>${exo.wallet.contract.abi.path:jar:/org/exoplatform/wallet/contract/MeedsToken.json}</value>
      </value-param>
      <value-param>
        <name>contract.bin.path</name>
        <description>Token Contract BIN path</description>
        <value>${exo.wallet.contract.bin.path:jar:/org/exoplatform/wallet/contract/MeedsToken.bin}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <key>org.exoplatform.wallet.service.WalletService</key>
    <type>org.exoplatform.wallet.service.WalletServiceImpl</type>
    <init-params>
      <value-param>
        <name>networkId</name>
        <description>Default used ethereum network ID</description>
        <value>${exo.wallet.blockchain.networkId:1}</value>
      </value-param>
      <value-param>
        <name>networkURL</name>
        <description>Default used ethereum network URL</description>
        <value>${exo.wallet.blockchain.network.http:https://mainnet.infura.io/v3/d355b1603771462291372496a2377a1c}</value>
      </value-param>
      <value-param>
        <name>networkWSURL</name>
        <description>Default used ethereum network Websocket URL</description>
        <value>${exo.wallet.blockchain.network.websocket:wss://mainnet.infura.io/ws/v3/d355b1603771462291372496a2377a1c}</value>
      </value-param>
      <value-param>
        <name>tokenAddress</name>
        <description>Token address to display for users</description>
        <value>${exo.wallet.blockchain.token.address:0xc76987d43b77c45d51653b6eb110b9174acce8fb}</value>
      </value-param>
      <value-param>
        <name>defaultInitialFunds</name>
        <description>A parameter to add the default value for the Ether/Matic to send to each user</description>
        <value>${exo.wallet.blockchain.defaultInitialCryptoCurrencyFunds}</value>
      </value-param>
      <value-param>
        <name>useDynamicGasPrice</name>
        <description>A parameter to make used gas price for all wallet based applications use dynamic gas price</description>
        <value>${exo.wallet.blockchain.useDynamicGasPrice:true}</value>
      </value-param>
      <value-param>
        <name>gasLimit</name>
        <description>Blockchain transaction gas limit</description>
        <value>${exo.wallet.transaction.gas.limit:200000}</value>
      </value-param>
      <value-param>
        <name>cheapGasPrice</name>
        <description>Default used gas for transactions</description>
        <value>${exo.wallet.transaction.gas.cheapPrice:4000000000}</value>
      </value-param>
      <value-param>
        <name>normalGasPrice</name>
        <description>Default used gas for transactions</description>
        <value>${exo.wallet.transaction.gas.normalPrice:8000000000}</value>
      </value-param>
      <value-param>
        <name>fastGasPrice</name>
        <description>Default used gas for transactions</description>
        <value>${exo.wallet.transaction.gas.fastPrice:20000000000}</value>
      </value-param>
      <value-param>
        <name>accessPermission</name>
        <description>Default access permission for wallet extension</description>
        <value>${exo.wallet.accessPermission:}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.wallet.service.WalletWebSocketService</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.rest.WalletSettingsREST</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.rest.WalletAccountREST</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.rest.WalletContractREST</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.rest.WalletTransactionREST</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.rest.WalletAdminTransactionREST</type>
  </component>

  <component>
    <type>org.exoplatform.wallet.plugin.WalletAdminIdentityProvider</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.IdentityManager</target-component>
    <component-plugin>
      <name>WalletAdminIdentityProvider plugin</name>
      <set-method>registerIdentityProviders</set-method>
      <type>org.exoplatform.social.core.identity.IdentityProviderPlugin</type>
      <init-params>
        <values-param>
          <name>providers</name>
          <value>org.exoplatform.wallet.plugin.WalletAdminIdentityProvider</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.settings.ExoFeatureService</target-component>
    <component-plugin>
      <name>wallet</name>
      <set-method>addFeaturePlugin</set-method>
      <type>org.exoplatform.wallet.plugin.WalletFeaturePlugin</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.wallet.addressAssociation.new</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.listener.AutoTransactionListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.block.mined</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.BlockMinedListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.transaction.mined</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.TransactionMinedListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.transaction.modified</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.listener.TransactionNotificationListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.transaction.modified</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.WebSocketTransactionListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.transaction.modified</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.TransactionMinedAndUpdatedListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.transaction.sent</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.TransactionSentToBlockchainListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.modified</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.WebSocketWalletListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.contract.modified</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.blockchain.listener.WebSocketContractListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.wallet.deleted</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.wallet.listener.CancelTransactionListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
  <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
  <component-plugin>
    <name>AddCronJob</name>
    <set-method>addCronJob</set-method>
    <type>org.exoplatform.services.scheduler.CronJob</type>
    <description>Add a job to verify if mined contract transactions are added in database</description>
    <init-params>
      <properties-param>
        <name>cronjob.info</name>
        <description>Add a job to verify if mined contract transactions are added in database</description>
        <property name="jobName" value="ContractTransactionVerifierJob"/>
        <property name="groupName" value="Wallet"/>
        <property name="job" value="org.exoplatform.wallet.job.ContractTransactionVerifierJob"/>
        <property name="expression" value="${exo.wallet.ContractTransactionVerifierJob.expression:0 0/5 * ? * * *}"/>
      </properties-param>
    </init-params>
  </component-plugin>
  <component-plugin>
    <name>AddCronJob</name>
    <set-method>addCronJob</set-method>
    <type>org.exoplatform.services.scheduler.CronJob</type>
    <description>Configuration for transaction sending to blockchain</description>
    <init-params>
      <properties-param>
        <name>cronjob.info</name>
        <description>Configuration for transaction sending to blockchain</description>
        <property name="jobName" value="TransactionSenderJob"/>
        <property name="groupName" value="Wallet"/>
        <property name="job" value="org.exoplatform.wallet.job.TransactionSenderJob"/>
        <property name="expression" value="${exo.wallet.TransactionSenderJob.expression:0/30 * * * * ?}"/>
      </properties-param>
    </init-params>
  </component-plugin>
  <component-plugin>
    <name>AddCronJob</name>
    <set-method>addCronJob</set-method>
    <type>org.exoplatform.services.scheduler.CronJob</type>
    <description>Configuration for the Job that boost transaction sending to blockchain</description>
    <init-params>
      <properties-param>
        <name>cronjob.info</name>
        <description>Configuration for the Job that boost transaction sending to blockchain</description>
        <property name="jobName" value="BoostAdminTransactionJob"/>
        <property name="groupName" value="Wallet"/>
        <property name="job" value="org.exoplatform.wallet.job.BoostAdminTransactionJob"/>
        <property name="expression" value="${exo.wallet.BoostAdminTransactionJob.expression:0 30 7 * * ?}"/>
      </properties-param>
    </init-params>
  </component-plugin>
  <component-plugin>
    <name>AddCronJob</name>
    <set-method>addCronJob</set-method>
    <type>org.exoplatform.services.scheduler.CronJob</type>
    <description>Configuration for pending transactions check on blockchain</description>
    <init-params>
      <properties-param>
        <name>cronjob.info</name>
        <description>Configuration for pending transactions check on blockchain</description>
        <property name="jobName" value="PendingTransactionVerifierJob"/>
        <property name="groupName" value="Wallet"/>
        <property name="job" value="org.exoplatform.wallet.job.PendingTransactionVerifierJob"/>
        <property name="expression" value="${exo.wallet.PendingTransactionVerifierJob.expression:0 15 7 * * ?}"/>
      </properties-param>
    </init-params>
  </component-plugin>
  <component-plugin>
    <name>AddCronJob</name>
    <set-method>addCronJob</set-method>
    <type>org.exoplatform.services.scheduler.CronJob</type>
    <description>A job to update gas price from blockchain</description>
    <init-params>
      <properties-param>
        <name>cronjob.info</name>
        <description>A job to update gas price from blockchain</description>
        <property name="jobName" value="GasPriceUpdaterJob"/>
        <property name="groupName" value="Wallet"/>
        <property name="job" value="org.exoplatform.wallet.job.GasPriceUpdaterJob"/>
        <property name="expression" value="${exo.wallet.GasPriceUpdaterJob.expression:0 0/2 * * * ?}"/>
      </properties-param>
    </init-params>
  </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
    <component-plugin>
      <name>WalletRDBMSChangeLogsPlugin</name>
      <set-method>addChangeLogsPlugin</set-method>
      <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
      <init-params>
        <values-param>
          <name>changelogs</name>
          <description>Change logs of Wallet RDBMS</description>
          <value>db/changelog/wallet-rdbms.db.changelog-master.xml</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
